<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/white"
                app:cardCornerRadius="18dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:padding="2dip"
                            android:text="254"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$4,678"
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:gravity="center"

                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total de ventas"
                            android:padding="2dip"
                            android:layout_span="1"
                            android:gravity="center"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingreso total"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:gravity="center"/>
                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <!--androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnImageCalendar"
                            android:layout_width="10dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons8_calendar_96px"
                            android:layout_weight="1"
                            android:onClick="openCalendarr"
                            ></ImageView>

                        <TextView

                            android:id="@+id/dateString"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="2dip"
                            android:text="02 abril 2022" />
                    </TableRow>


                </TableLayout>

            </androidx.cardview.widget.CardView-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="18dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="2dip"
                                android:text="Utilidad total" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="2dip"
                                android:text="$100" />

                        </TableRow>


                    </TableLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="18dp" >

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView android:layout_width="32dp"
                                android:layout_height="32sp"
                                android:src="@drawable/icons8_money_48px"
                                android:layout_marginLeft="4dp"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:padding="2dip"
                                android:text="Venta total"/>


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="2dip"
                                android:text="$100" />


                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icons8_money_48px_gasto"
                                android:layout_marginLeft="4dp"/>
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:gravity="center"
                                android:padding="2dip"
                                android:text="Gasto total"
                                android:layout_marginRight="4dp"/>

                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="2dip"
                                android:text="$100" />


                        </TableRow>


                    </TableLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <TextView
                android:id="@+id/dateCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="fecha"/>
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/compactcalendar_view"
                android:layout_width="fill_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="250dp"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextSize="12sp"
                android:layout_margin="12dp"
                app:compactCalendarBackgroundColor="@color/purple_500"
                app:compactCalendarTextColor="#fff"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/purple_200"
                app:compactCalendarCurrentDayBackgroundColor="@color/purple_700"
                app:compactCalendarMultiEventIndicatorColor="#fff"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Cita agendada"
                        android:layout_marginRight="18dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_circle_24"/>
                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>





</LinearLayout>